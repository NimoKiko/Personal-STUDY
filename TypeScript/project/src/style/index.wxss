* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  font: bold 20px "Courier";
}
#main {
  width: 480px;
  height: 420px;
  margin: 50px auto;
  background-color: #b7d4a8;
  border: 10px solid black;
  border-radius: 30px;
  position: relative;
}
#main #stage {
  position: absolute;
  top: 10px;
  left: 20px;
  width: 304px;
  height: 304px;
  border: 2px solid black;
  position: relative;
}
#main #stage #snake div {
  width: 10px;
  height: 10px;
  background-color: black;
  border: 1px solid #b7d4a8;
  position: absolute;
}
#main #stage #food {
  width: 10px;
  height: 10px;
  background-color: #c22f2f;
  border: 1px solid #b7d4a8;
  border-radius: 100px;
  position: absolute;
  left: 40px;
  top: 100px;
}
#main #score-panel {
  position: absolute;
  left: 20px;
  bottom: 30px;
  width: 424px;
  display: flex;
  justify-content: space-between;
}
#main #function-panel {
  position: absolute;
  right: 10px;
  top: 10px;
  border: 2px solid black;
  border-radius: 5px;
  height: 304px;
  width: 120px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#main #function-panel div {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}
#main #function-panel div span {
  margin-top: 10px;
}
